{
  "name": "hollowverse",
  "version": "1.0.0",
  "private": true,
  "description": "hollowverse",
  "author": "M.K. Safi",
  "scripts": {
    "dev-no-ssl": "next dev",
    "dev": "run-p 'dev-no-ssl -- -p 2999' 'local-ssl-proxy --source 3000 --target 2999'",
    "build": "next build",
    "start": "next build && next start",
    "export": "next export",
    "next": "next",
    "test": "jest --watch",
    "lint": "next lint",
    "lighthouse": "lighthouse-batch -f ${URL_FILE:-lighthouse/local.txt} --html --no-report --params '--only-categories accessibility,best-practices,performance,seo'; open report/lighthouse",
    "lighthouse-single": "URL_FILE='lighthouse/single-local.txt' npm run lighthouse",
    "lighthouse-live": "URL_FILE='lighthouse/live.txt' npm run lighthouse",
    "manual-validation": "URL_FILE='lighthouse/local.txt' playwright test",
    "manual-validation-live": "URL_FILE='lighthouse/live.txt' playwright test",
    "local-ssl-proxy": "local-ssl-proxy --source 3000 --target 2999"
  },
  "dependencies": {
    "@logtail/js": "^0.1.12",
    "@sanity/client": "^3.2.2",
    "@types/node": "^17.0.38",
    "@types/react": "^18.0.10",
    "lodash-es": "^4.17.21",
    "next": "^12.1.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.5.4"
  }
}
